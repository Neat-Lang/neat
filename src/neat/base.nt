/**
 * This contains the parts of Context that are rarely modified,
 * and should thus be hidden behind a pointer.
 */
class ImmutableContext
{
    CompilerBase compiler;

    Platform platform;

    MacroState macroState;

    // here for caching reasons
    // TODO replace with once
    Type nativeWordType;

    // the reference by which free variables are resolved.
    nullable Expression framePointer;

    nullable ModuleBase compilingModule;

    IdCounter idCounter;

    LocRange[] errorStack;

    ModulePreProcessor modulePreProcessor;

    ModulePostProcessor modulePostProcessor;

    this(this.compiler, this.platform, this.macroState, this.nativeWordType,
        this.framePointer, this.compilingModule, this.idCounter, this.errorStack,
        this.modulePreProcessor, this.modulePostProcessor) { }

    ImmutableContext withFramePointer(nullable Expression framePointer) {
        return new ImmutableContext(
            this.compiler, this.platform, this.macroState,
            this.nativeWordType, framePointer, this.compilingModule,
            this.idCounter, this.errorStack, this.modulePreProcessor,
            this.modulePostProcessor);
    }

    ImmutableContext withCompilingModule(ModuleBase compilingModule) {
        return new ImmutableContext(
            this.compiler, this.platform, this.macroState,
            this.nativeWordType, this.framePointer, compilingModule,
            this.idCounter, this.errorStack, this.modulePreProcessor,
            this.modulePostProcessor);
    }

    ImmutableContext withLabelPrefix(string prefix) {
        auto idCounter = new IdCounter(prefix);

        return new ImmutableContext(
            this.compiler, this.platform, this.macroState,
            this.nativeWordType, this.framePointer, this.compilingModule,
            idCounter, this.errorStack, this.modulePreProcessor,
            this.modulePostProcessor);
    }
}

class IdCounter
{
    string prefix;

    int count;

    this(this.prefix = "uniq") { }

    string next() {
        int count = this.count;
        this.count += 1;
        return "$(this.prefix)$(count)";
    }
}

// Used by main to analyze the AST tree (docgen)
