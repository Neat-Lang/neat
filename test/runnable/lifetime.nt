class U {
    C c;

    this(this.c) { }
}

void test_with() {
    dbg("- with");
    {
        string trace_;
        with (S("S", &trace_, 0))
        {
            assert(trace_ == "");
        }
        assert(trace_ == "-S0");
    }
    {
        string trace_;
        {
            S s = S("S", &trace_, 0);
            with (s)
            {
                assert(trace_ == "");
            }
        }
        assert(trace_ == "-S0");
    }
    {
        string trace_;
        void test()
        {
            with (S("S", &trace_, 0))
            {
                assert(trace_ == "");
                return;
            }
        }
        test;
        assert(trace_ == "-S0");
    }
    {
        string trace_;
        {
            S s = S("S", &trace_, 0);
            void test2(S s)
            {
                with (s)
                {
                    return;
                }
            }
            test2(s);
            assert(trace_ == "");
        }
        assert(trace_ == "-S0");
    }
    {
        string trace_;
        void test3(U u) {
            with (u.c) {
                return;
            }
        }
        auto u = new U(new C(S("S", &trace_, 0)));
        test3(u);
        assert((cast(size_t*) u.c)[1] == 1);
        assert(trace_ == "+S1 -S0");
    }
}

