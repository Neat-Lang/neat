class XorShift
{
    ulong a;
    this(ulong seed) { a = seed; }
    ulong rand() {
        mut ulong x = a;
        x ^= x << 13;
        x ^= x >> 7;
        x ^= x << 17;
        a = x;
        return x;
    }
    int irand() {
        // FIXME remainder should be unsignedf
        return cast(int) ((rand % 1073741824) + 1073741824);
    }
    float randf() {
        return irand / 2147483647.0f;
    }
}

