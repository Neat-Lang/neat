module iftest;

macro import std.macro.assert;

void main() {
    mut int i = 0;
    if (1 == 1) i = 1;
    assert(i == 1);
    if (1 == 1) i = 1; else i = 2;
    assert(i == 1);
    if (1 == 2) i = 1; else i = 2;
    assert(i == 2);
    if (!(1 == 1)) assert(false);
    if (1 != 1) assert(false);
    int k = 3;
    if (int k = 5) assert(k == 5);
    assert(k == 3);
    if (int zero = 0) assert(false);
    let (int zero = 0) {
    } else assert(false);
}
