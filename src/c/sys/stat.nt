module c.sys.stat;

import c.sys.time : timespec;

extern(C) int mkdir(char* pathname, int mode);

struct stat_struct {
    size_t st_dev;
    size_t st_ino;
    size_t st_nlink;
    int st_mode;
    int st_uid;
    int st_gid;
    int _pad0;
    size_t st_rdev;
    size_t st_size;
    size_t st_blksize;
    size_t st_blocks;
    timespec st_atim;
    timespec st_mtim;
    timespec st_ctim;
}

alias S_IFREG = 0x8000;

extern(C) int stat(char* pathname, stat_struct* statbuf);
