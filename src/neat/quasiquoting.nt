// Library support for std.macro.quasiquoting.
module neat.quasiquoting;

import neat.base;
import neat.runtime;

// helper to reduce duplication in the classes below
struct ASTQuoteState
{
    string fragment;

    Package pak;

    // Note: these are *resolved* symbols.
    // For $a, they're not ASTIdentifier, they're the value of the variable.
    // This is because they got stuffed into an array literal above.
    // That's why we can feed them directly into the compile call.
    ASTSymbol[] symbols;

    ASTStatement[] statements;

    ASTIdentifierSymbol[] identifiers;
}

class ASTQuotedStatement : ASTStatement
{
    ASTQuoteState state;

    this(this.state, this.locRange) {}

    override (StatementCompileResult | fail Error) compile(Context context) {
        auto parser = context.compiler.createFragmentParser(fragment=state.fragment, start=locRange)?;
        auto uniqueId = context.getUniqueId;
        auto quoteLexicalContext = new QuoteLexicalContext(uniqueId, context.compiler, state.pak);
        auto astStatement = context.compiler.parseStatement(parser, quoteLexicalContext)?;
        auto quoteScope = new QuoteScope(uniqueId, context.quoteScope,
            state.symbols, state.statements, state.identifiers);
        auto context = context.withQuoteScope(quoteScope);
        return astStatement.compile(context);
    }

    override ASTSymbol quote(Quoter quoter) {
        assert(false);
    }

    override string repr() { return "compiler.\$stmt $(state.fragment)"; }
}

    override ASTSymbol quote(Quoter quoter) {
        assert(false);
    }

