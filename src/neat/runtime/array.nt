module neat.runtime.array;

size_t checkIndex(size_t index, size_t length) {
    // < 0 overflows to >= length.
    if (index >= length) {
        import neat.runtime.stdlib : exit, fprintf, stderr;

        fprintf(stderr, "Array index out of bounds: %zd\n".ptr, index);
        exit(1);
    }
    return index;
}
