module vectortest;

macro import std.macro.assert;

alias vec3f = Vector(float, 3);

void main() {
    auto v1 = vec3f(1, 2, 4);
    assert(v1.x == 1 && v1.y == 2 && v1.z == 4);
    assert(v1.zyx == vec3f(4, 2, 1));
    assert(v1 * 2 == vec3f(2, 4, 8));
    assert(v1 / 2 == vec3f(0.5f, 1, 2));
    assert(v1 + v1 == vec3f(2, 4, 8));
    int i = 2;
    assert(v1[i] == 4);
}
